<mujoco model="seven_dof_arm">
  <compiler angle="radian" inertiafromgeom="true"/>
  <default>
    <joint armature="0.01" damping="1" limited="true"/>
    <geom contype="1" conaffinity="1" rgba="0.7 0.7 0.7 1"/>
  </default>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4" width="500" height="500"/>
    <material name="grid_mat" texture="grid" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>
    <geom name="floor" type="plane" size="0 0 0.05" material="grid_mat"/>

    <body name="base" pos="0 0 0.05">
      <geom type="box" size="0.1 0.1 0.05" rgba="0.6 0.6 0.6 1"/>
      <!-- Joint 1: Base rotation (yaw) -->
      <body name="link1" pos="0 0 0.1">
        <joint name="joint1" type="hinge" axis="0 0 1" range="-3.14 3.14"/>
        <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.8 0.2 0.2 1"/>
        <!-- Joint 2: Shoulder pitch -->
        <body name="link2" pos="0 0 0.2">
          <joint name="joint2" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
          <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.2 0.8 0.2 1"/>
          <!-- Joint 3: Shoulder roll -->
          <body name="link3" pos="0 0 0.2">
            <joint name="joint3" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
            <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.2 0.2 0.8 1"/>
            <!-- Joint 4: Elbow pitch -->
            <body name="link4" pos="0 0 0.2">
              <joint name="joint4" type="hinge" axis="0 1 0" range="-2.0 2.0"/>
              <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.8 0.8 0.2 1"/>
              <!-- Joint 5: Wrist roll -->
              <body name="link5" pos="0 0 0.2">
                <joint name="joint5" type="hinge" axis="1 0 0" range="-1.57 1.57"/>
                <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.2 0.8 0.8 1"/>
                <!-- Joint 6: Wrist pitch -->
                <body name="link6" pos="0 0 0.2">
                  <joint name="joint6" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
                  <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.8 0.2 0.8 1"/>
                  <!-- Joint 7: Wrist yaw -->
                  <body name="link7" pos="0 0 0.2">
                    <joint name="joint7" type="hinge" axis="0 0 1" range="-1.57 1.57"/>
                    <geom type="capsule" size="0.05" fromto="0 0 0 0 0 0.2" rgba="0.5 0.5 0.5 1"/>
                    <site name="end_effector" pos="0 0 0.2" size="0.01"/>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor joint="joint1" gear="100"/>
    <motor joint="joint2" gear="100"/>
    <motor joint="joint3" gear="100"/>
    <motor joint="joint4" gear="100"/>
    <motor joint="joint5" gear="100"/>
    <motor joint="joint6" gear="100"/>
    <motor joint="joint7" gear="100"/>
  </actuator>
</mujoco>
